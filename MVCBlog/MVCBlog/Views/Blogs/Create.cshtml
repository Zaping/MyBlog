@model MVCBlog.Models.Blog
<head>
    <script type="text/javascript" src="~/Scripts/ckeditor/ckeditor.js"></script>



</head>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Blog</h4>
        
     
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
          
            @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-2" }) 
           
            <div class="col-md-10">
                @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Content, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Content, new { @cols = "90", @rows = "20", @id = "editor", htmlAttributes = new { @class = "form-control" } })
                <script type="text/javascript"> CKEDITOR.replace('editor', {  filebrowserImageBrowseUrl: '/Blogs/uploadPartial',
     filebrowserImageUploadUrl: '/Handler1.ashx', htmlEncodeOutput: true, enterMode: CKEDITOR.ENTER_BR
 });
                    function updateValue(id, value) {
                        // this gets called from the popup window and updates the field with a new value 
                        document.getElementById(id).value = value;
                    }</script>
                @Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })    
          
             
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}
<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
